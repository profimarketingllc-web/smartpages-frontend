<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartPages Login</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <style>
      :root {
        --navy: #1E2A45;
        --yellow: #F5B400;
        --orange: #E47E00;
        --blue: #4E6BFF;
        --blue-light: #657AFF;
        --violet: #8B5CFF;
        --violet-light: #A076FF;
        --shadow: 0 8px 25px rgba(0, 0, 0, 0.18);
      }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #ffffff;
        color: #222;
      }

      input,
      button,
      label,
      p,
      h1,
      h2,
      h3 {
        font-family: inherit;
      }

      header {
        background: var(--navy);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        padding: 1.3rem;
        text-align: center;
      }

      header img {
        width: 120px;
        height: 120px;
      }

      .hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1200px;
        margin: 4rem auto;
        gap: 2rem;
        align-items: start;
        padding: 0 2rem;
      }

      .form-wrapper {
        max-width: 540px;
        margin: 0 auto;
        background: #f6f8fb;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: var(--shadow);
      }

      form {
        background: #fff;
        padding: 1.5rem;
        border-radius: 0.75rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      input[type="text"],
      input[type="email"] {
        padding: 0.8rem;
        border: 1px solid #ccc;
        border-radius: 0.5rem;
        font-size: 1rem;
      }

      button {
        background: linear-gradient(135deg, var(--yellow), var(--orange));
        color: white;
        font-weight: bold;
        padding: 0.9rem;
        border: none;
        border-radius: 0.6rem;
        cursor: pointer;
        font-size: 1rem;
        transition: transform 0.2s, box-shadow 0.2s;
      }

      button:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow);
      }

      /* === POPUP === */
      #popup {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -40%);
        background: white;
        padding: 1.2rem 2rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        text-align: center;
        font-size: 1.1rem;
        font-weight: 600;
        opacity: 0;
        transition: all 0.5s ease-in-out;
        z-index: 9999;
      }
      #popup.show {
        opacity: 1;
        transform: translate(-50%, -50%);
      }
      #popup.success { border-left: 8px solid #22c55e; background: #ecfdf5; color: #14532d; }
      #popup.warning { border-left: 8px solid #facc15; background: #fefce8; color: #713f12; }
      #popup.error   { border-left: 8px solid #ef4444; background: #fef2f2; color: #991b1b; }
    </style>
  </head>

  <body>
    <header>
      <img src="/SmartPages_icon_transparent.png" alt="SmartPages Logo" />
      <div class="header-text">
        <h1>SmartPages</h1>
        <p>Wir bringen Dich in 10 Minuten online – ohne Technik Wissen</p>
      </div>
    </header>

    <section class="hero">
      <div class="form-wrapper">
        <form id="magicForm">
          <div class="form-field">
            <label>Vorname *</label>
            <input type="text" name="first_name" required />
          </div>

          <div class="form-field">
            <label>Nachname</label>
            <input type="text" name="last_name" />
          </div>

          <div class="form-field">
            <label>E-Mail *</label>
            <input type="email" name="email" required />
          </div>

          <div class="checkbox">
            <input type="checkbox" id="is_business" name="is_business" />
            <label for="is_business">Das ist ein Firmenkonto (Business)</label>
          </div>

          <div id="company_field" class="form-field" style="display:none;">
            <label>Firmenname</label>
            <input type="text" name="company_name" />
          </div>

          <button type="submit">Magic-Link senden</button>
        </form>
      </div>
    </section>

    <div id="popup"></div>

    <script>
      const API_URL = "https://api.smartpages.online/api/auth/start";

      function showPopup(message, type = "success") {
        const popup = document.getElementById("popup");
        popup.textContent = message;
        popup.className = `show ${type}`;
        setTimeout(() => popup.classList.remove("show"), 9500);
      }

      async function handleSubmit(e) {
        e.preventDefault();
        const form = e.target;
        const data = {
          first_name: form.first_name.value.trim(),
          last_name: form.last_name.value.trim(),
          email: form.email.value.trim(),
          company_name: form.company_name?.value.trim() || "",
          is_business: form.is_business.checked,
        };

        showPopup("⏳ Wir senden Deinen Magic-Link...", "warning");

        try {
          const res = await fetch(API_URL, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });

          const result = await res.json();

          if (result.ok) {
            showPopup("✅ Magic-Link gesendet! Bitte prüfe Dein E-Mail-Postfach.", "success");
            form.reset();
          } else if (result.error === "mailer_failed") {
            showPopup("⚠️ Der Versand ist momentan nicht möglich. Bitte später erneut versuchen.", "warning");
          } else if (["email_required", "invalid_email"].includes(result.error)) {
            showPopup("❌ Die E-Mail-Adresse ist ungültig oder nicht erreichbar.", "error");
          } else {
            showPopup("❌ Fehler beim Versand. Bitte überprüfe Deine Angaben.", "error");
          }
        } catch (err) {
          showPopup("⚠️ Netzwerkfehler – bitte versuche es erneut.", "error");
        }
      }

      window.addEventListener("DOMContentLoaded", () => {
        console.log("✅ Script geladen und aktiv");
        const form = document.getElementById("magicForm");
        form.addEventListener("submit", handleSubmit);

        const cb = document.getElementById("is_business");
        const field = document.getElementById("company_field");
        cb.addEventListener("change", () => {
          field.style.display = cb.checked ? "block" : "none";
        });
      });

      window.onerror = (msg) => {
        showPopup("⚠️ Scriptfehler: " + msg, "error");
      };
    </script>
  </body>
</html>
