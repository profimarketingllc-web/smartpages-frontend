<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SmartPages Login</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <style>
      :root {
        --navy: #1E2A45;
        --yellow: #F5B400;
        --orange: #E47E00;
        --blue: #4E6BFF;
        --blue-light: #657AFF;
        --violet: #8B5CFF;
        --violet-light: #A076FF;
        --shadow: 0 8px 25px rgba(0, 0, 0, 0.18);
      }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: #ffffff;
        color: #222;
      }

      input,
      button,
      label,
      p,
      h1,
      h2,
      h3 {
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      }

      header {
        background: var(--navy);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        padding: 1.3rem;
        text-align: center;
      }

      header img {
        width: 120px;
        height: 120px;
      }

      .header-text h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin: 0 0 0.4rem;
      }

      .header-text p {
        margin: 0;
        font-size: 1rem;
        opacity: 0.9;
      }

      .hero {
        display: grid;
        grid-template-columns: 1fr 1fr;
        max-width: 1200px;
        margin: 4rem auto;
        gap: 2rem;
        align-items: start;
        padding: 0 2rem;
      }

      .form-wrapper {
        max-width: 540px;
        margin: 0 auto;
        background: #f6f8fb;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: var(--shadow);
      }

      .welcome {
        background: #fff;
        box-shadow: var(--shadow);
        padding: 2rem;
        border-radius: 1rem;
      }

      .welcome h2 {
        color: var(--yellow);
        margin: 0 0 0.6rem;
        font-size: 2.2rem;
        font-weight: 800;
      }

      .welcome h3 {
        margin: 0 0 1.25rem;
        color: var(--navy);
        font-size: 1.35rem;
        font-weight: 700;
      }

      form {
        background: #fff;
        padding: 1.5rem;
        border-radius: 0.75rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .form-field {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
      }

      label {
        font-weight: 500;
        font-size: 0.9rem;
        color: #6b7280;
      }

      input[type="text"],
      input[type="email"] {
        padding: 0.8rem;
        border: 1px solid #ccc;
        border-radius: 0.5rem;
        font-size: 1rem;
      }

      #company_field input {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid #ccc;
        border-radius: 0.5rem;
        font-size: 1rem;
        box-sizing: border-box;
      }

      .checkbox {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        margin-bottom: 0.25rem;
      }

      button {
        background: linear-gradient(135deg, var(--yellow), var(--orange));
        color: white;
        font-weight: bold;
        padding: 0.9rem;
        border: none;
        border-radius: 0.6rem;
        cursor: pointer;
        font-size: 1rem;
        transition: transform 0.2s, box-shadow 0.2s;
      }

      button:hover {
        transform: scale(1.02);
        box-shadow: var(--shadow);
      }

      .products {
        max-width: 1200px;
        margin: 4rem auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        padding: 0 2rem;
      }

      .card {
        border-radius: 1rem;
        color: white;
        padding: 2rem;
        box-shadow: var(--shadow);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .card h3 {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 0 0.75rem;
      }

      .card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
      }

      .smartprofile {
        background: linear-gradient(135deg, var(--blue), var(--blue-light));
      }

      .smartpage {
        background: linear-gradient(135deg, var(--yellow), var(--orange));
      }

      .smartdomain {
        background: linear-gradient(135deg, var(--violet), var(--violet-light));
      }

      footer {
        text-align: center;
        padding: 2rem;
        background: #f5f5f5;
        font-size: 0.9rem;
        color: #555;
      }

      @media (max-width: 900px) {
        .hero {
          grid-template-columns: 1fr;
        }
        header {
          flex-direction: column;
        }
      }

      /* === TOAST STYLES === */
      .toast {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%) translateY(30px);
        background: #fff;
        color: #333;
        padding: 14px 22px;
        border-radius: 8px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.25);
        opacity: 0;
        transition: all 0.35s ease;
        z-index: 9999;
        font-size: 15px;
        text-align: center;
        max-width: 90%;
      }

      .toast.visible {
        opacity: 1;
        transform: translateX(-50%) translateY(0);
      }

      .toast.success {
        border-left: 6px solid var(--yellow);
        background: #fffbea;
        color: #4d4b00;
      }

      .toast.warning {
        border-left: 6px solid var(--orange);
        background: #fff7f0;
        color: #7a3b00;
      }

      .toast.error {
        border-left: 6px solid #ef4444;
        background: #fef2f2;
        color: #991b1b;
      }

      .toast.loading {
        border-left: 6px solid var(--blue);
        background: #eff6ff;
        color: #1e3a8a;
      }
    </style>
  </head>

  <body>
    <header>
      <img src="/SmartPages_icon_transparent.png" alt="SmartPages Logo" />
      <div class="header-text">
        <h1>SmartPages</h1>
        <p>Wir bringen Dich in 10 Minuten online – ohne Technik Wissen</p>
      </div>
    </header>

    <section class="hero">
      <div class="welcome">
        <h2>Herzlich Willkommen</h2>
        <h3>bei SmartPages</h3>
        <p>
          Mit SmartPages startest Du in nur wenigen Minuten Dein eigenes digitales Zuhause.
          Wir senden Dir Deinen persönlichen <b>Magic-Link</b>, mit dem Du direkt in Dein Dashboard gelangst – 
          ohne Passwort oder komplizierte Registrierung.
        </p>
        <p>
          Gib einfach Deine Basisdaten ein, damit Dein Account korrekt zugeordnet werden kann.
          Du entscheidest, ob Du SmartPages privat oder geschäftlich nutzt – der Zugang ist in beiden Fällen <b>kostenlos</b>, in der Testphase.
        </p>
      </div>

      <div class="form-wrapper">
        <form onsubmit="handleSubmit(event)">
          <div class="form-field">
            <label>Vorname *</label>
            <input type="text" name="first_name" required />
          </div>

          <div class="form-field">
            <label>Nachname</label>
            <input type="text" name="last_name" />
          </div>

          <div class="form-field">
            <label>E-Mail *</label>
            <input type="email" name="email" required />
          </div>

          <div class="checkbox">
            <input type="checkbox" id="is_business" name="is_business" />
            <label for="is_business">Das ist ein Firmenkonto (Business)</label>
          </div>

          <div id="company_field" class="form-field" style="display:none;">
            <label>Firmenname</label>
            <input type="text" name="company_name" />
          </div>

          <button type="submit">Magic-Link senden</button>
        </form>
      </div>
    </section>

    <section class="products">
      <div class="card smartprofile">
        <h3>SmartProfile</h3>
        <p>Erstelle in Minuten Deine zentrale Profilseite mit Branding, Links & Kontakt – ideal für Creator, Influencer und Solopreneure.</p>
      </div>

      <div class="card smartpage">
        <h3>SmartPage</h3>
        <p>Deine persönliche Subdomain mit bis zu 5 frei gestaltbaren Unterseiten. Präsentiere Deine Produkte, Dienstleistungen oder Projekte – individuell & professionell.</p>
      </div>

      <div class="card smartdomain">
        <h3>SmartDomain</h3>
        <p>Gestalte Deine eigene Homepage mit Deinem Namen und gestalte sie ganz individuell mit unseren Bausteinen.</p>
      </div>
    </section>

    <footer>
      © 2025 SmartPages · Profi Marketing LLC · DSGVO-konform in Europa gehostet
    </footer>

    <script>
      const API_URL = "https://api.smartpages.online/api/auth/start";

      async function handleSubmit(e) {
        e.preventDefault();
        const form = e.target;
        const data = {
          first_name: form.first_name.value.trim(),
          last_name: form.last_name.value.trim(),
          email: form.email.value.trim(),
          company_name: form.company_name?.value.trim() || "",
          is_business: form.is_business.checked,
        };

        showToast("Sende Anfrage...", "loading");

        try {
          const res = await fetch(API_URL, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data),
          });
          const result = await res.json();

          if (result.ok) {
            showToast("✅ Dein Magic-Link wurde gesendet! Bitte prüfe Dein Postfach.", "success");
            form.reset();
          } else if (result.error === "mailer_failed") {
            showToast("⚠️ Der Versand ist fehlgeschlagen. Bitte versuche es in wenigen Minuten erneut.", "warning");
          } else if (result.error === "email_required" || result.error === "invalid_email") {
            showToast("❌ Diese E-Mail-Adresse ist ungültig oder aktuell nicht erreichbar.", "error");
          } else {
            showToast("❌ Der Versand konnte nicht abgeschlossen werden. Bitte überprüfe Deine Angaben.", "error");
          }
        } catch (err) {
          showToast("⚠️ Netzwerkfehler – bitte prüfe Deine Internetverbindung.", "error");
        }
      }

      function showToast(message, type = "info") {
        const toast = document.createElement("div");
        toast.className = `toast ${type}`;
        toast.textContent = message;
        document.body.appendChild(toast);
        setTimeout(() => toast.classList.add("visible"), 100);
        setTimeout(() => toast.classList.remove("visible"), 9000);
        setTimeout(() => toast.remove(), 10000);
      }

      document.addEventListener("DOMContentLoaded", () => {
        const cb = document.getElementById("is_business");
        const field = document.getElementById("company_field");
        cb.addEventListener("change", () => {
          field.style.display = cb.checked ? "block" : "none";
        });
      });
    </script>
  </body>
</html>
